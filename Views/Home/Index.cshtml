﻿@{
    ViewData["Title"] = "Login Page";
}

@model Arhitektura.Roles.User

<style>
    body {
        background-color: #f7f7f7;
        
    }

    .container {
        max-width: 3000px;
        margin: 0 auto;
        padding: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .login-form {
        display: flex;
        flex-direction: column;
    }

    .login-form h1 {
        font-size: 60px; /* Povećan font */
        margin-bottom: 20px;
        color: #333;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .login-form p {
        font-size: 30px; /* Povećan font */
        margin-bottom: 40px;
        color: #666;
    }

    .login-form input[type="text"],
    .login-form input[type="password"] {
        width: 100%;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .login-form button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 20px; /* Povećan font */
        cursor: pointer;
    }

    .login-form .signup-link {
        margin-top: 20px;
        font-size: 18px; /* Povećan font */
        color: #007bff;
        text-decoration: none;
    }

    .welcome-text {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .welcome-text h1 {
        font-size: 60px; /* Povećan font */
        margin-bottom: 20px;
        color: #333;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .welcome-text p {
        font-size: 30px; /* Povećan font */
        margin-bottom: 40px;
        color: #666;
    }
</style>

<div class="container">
        @if(Context.Session.GetString("Role") == "guest")
        {
        <div class="login-form">
            <h1>Prijava</h1>

            <form asp-controller="Home" asp-action="Index" method="post">
                <input type="text" placeholder="Korisničko ime" asp-for="Username" />
                <input type="password" placeholder="Lozinka" asp-for="Password" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <button type="submit">Prijavi se</button>
            </form>
            <a href="@Url.Action("Register", "Home")" class="signup-link">Registruj se</a>
        </div>
        <img src="/images/logo.png" width="400px">
    
        }else
        {
            <div class="welcome-text">
                <h1 style="text-align: center;">Dobrodošli</h1>
                <p style="text-align: center;"> Pronađite savršeni aranžman za svoje putovanje uz najbolje turističke agencije u Novom Sadu. Bilo da tražite avanturu, opuštanje ili kulturno iskustvo, naša aplikacija TourBook vam nudi širok izbor putovanja i aranžmana prilagođenih vašim željama. Spremite se za nova putovanja i nezaboravne uspomene!</p>
            </div>
        }
</div>

